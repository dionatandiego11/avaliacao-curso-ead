<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Gerenciar Avaliações - ReavalieEAD</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 font-sans">

  <header class="bg-red-600 text-white">
    <div class="max-w-7xl mx-auto flex justify-between items-center px-6 py-4">
      <div class="text-xl font-bold">REAVALIE<span class="text-yellow-300">EAD</span> - ADMIN</div>
      <nav class="space-x-6">
        <a href="/admin" class="hover:underline">Dashboard</a>
        <a href="/admin/instituicoes" class="hover:underline">Instituições</a>
        <a href="/admin/cursos" class="hover:underline">Cursos</a>
        <a href="/admin/avaliacoes" class="hover:underline">Avaliações</a>
        <a href="/admin/logout" class="bg-white text-red-600 px-4 py-2 rounded hover:bg-gray-100 font-semibold">Sair</a>
      </nav>
    </div>
  </header>

  <div class="max-w-7xl mx-auto py-10 px-6">
    <h1 class="text-3xl font-bold text-red-600 mb-8 text-center">Gerenciar Avaliações</h1>

    <% if (message) { %>
      <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
        <span class="block sm:inline"><%= message %></span>
      </div>
    <% } %>

    <section class="bg-white p-6 rounded shadow">
      <h2 class="text-xl font-semibold mb-4">Lista de Avaliações</h2>
      <div class="overflow-x-auto">
        <table class="min-w-full bg-white">
          <thead class="bg-gray-200">
            <tr>
              <th class="py-2 px-4 border-b">Usuário</th>
              <th class="py-2 px-4 border-b">Curso</th>
              <th class="py-2 px-4 border-b">Instituição</th>
              <th class="py-2 px-4 border-b">Comentário</th>
              <th class="py-2 px-4 border-b">Data</th>
              <th class="py-2 px-4 border-b">Ações</th>
            </tr>
          </thead>
          <tbody>
            <% if (avaliacoes && avaliacoes.length > 0) { %>
              <% avaliacoes.forEach(function(avaliacao) { %>
                <tr class="hover:bg-gray-50">
                  <td class="py-2 px-4 border-b"><%= avaliacao.user_name %></td>
                  <td class="py-2 px-4 border-b"><%= avaliacao.curso_nome %></td>
                  <td class="py-2 px-4 border-b"><%= avaliacao.instituicao_nome %></td>
                  <td class="py-2 px-4 border-b text-sm text-gray-600 max-w-xs truncate"><%= avaliacao.comentario || 'N/A' %></td>
                  <td class="py-2 px-4 border-b"><%= avaliacao.data_formatada %></td>
                  <td class="py-2 px-4 border-b">
                    <form method="POST" action="/admin/avaliacoes/delete/<%= avaliacao.id %>" onsubmit="return confirm('Tem certeza que deseja remover esta avaliação? Esta ação não pode ser desfeita.');">
                      <button type="submit" class="bg-red-500 text-white text-xs px-3 py-1 rounded hover:bg-red-600">Remover</button>
                    </form>
                  </td>
                </tr>
              <% }); %>
            <% } else { %>
              <tr>
                <td colspan="6" class="text-center py-4">Nenhuma avaliação encontrada.</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </section>

  </div>
</body>
</html>